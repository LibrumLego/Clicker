<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:padding="12dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="-"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_gradient_left"/>

        <TextView
            android:id="@+id/itemValue"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@id/btnMinus"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="0"
            android:textSize="26sp"
            android:textColor="#000000"
            android:background="@drawable/bg_edittext_border"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@id/itemValue"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="+"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_gradient_right"/>
    </RelativeLayout>
</LinearLayout>

