<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_border"
    android:padding="16dp">

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editName"
        style="@style/PopupInputStyle"
        android:hint="이름 입력"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/labelName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/labelColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editName"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/colorOptionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="8dp" android:paddingRight="8dp"
        android:background="@drawable/bg_input_box_outline"
        app:layout_constraintTop_toBottomOf="@id/labelColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/colorRed"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_purple_blue" />

        <ImageView
            android:id="@+id/colorBlue"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_pink_yellow" />

        <ImageView
            android:id="@+id/colorGreen"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_blue_mint" />

        <ImageView
            android:id="@+id/colorYellow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_emerald_gold" />

        <ImageView
            android:id="@+id/colorPurple"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_purple_pink" />
    </LinearLayout>

    <TextView
        android:id="@+id/labelDecrement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="감소량"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/colorOptionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter" /> <TextView
    android:id="@+id/labelIncrement"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="증가량"
    android:textColor="@android:color/black"
    android:textSize="14sp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/colorOptionContainer"
    app:layout_constraintStart_toEndOf="@id/guideCenter"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingStart="8dp" />

    <EditText
        android:id="@+id/editDecrementStep"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 1"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelDecrement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/editIncrementStep"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 1"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelIncrement"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/labelMin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="최솟값"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editDecrementStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter" />

    <TextView
        android:id="@+id/labelMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="최댓값"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editIncrementStep"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <EditText
        android:id="@+id/editMinValue"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 0"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelMin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/editMaxValue"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 100"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelMax"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/labelCustom1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="추가값 #1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editMinValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter" />

    <TextView
        android:id="@+id/labelCustom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="추가값 #2"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editMaxValue"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <EditText
        android:id="@+id/editCustomStep1"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 10"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelCustom1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/editCustomStep2"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 50"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelCustom2"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/labelCustom3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="추가값 #3"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter" />

    <TextView
        android:id="@+id/labelCustom4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="추가값 #4"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep2"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <EditText
        android:id="@+id/editCustomStep3"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 100"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelCustom3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/editCustomStep4"
        style="@style/PopupInputStyle"
        android:layout_width="0dp"
        android:hint="기본: 1000"
        android:inputType="numberSigned"
        app:layout_constraintTop_toBottomOf="@id/labelCustom4"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmEdit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="확인"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>