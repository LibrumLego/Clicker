<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_border"
    android:padding="20dp">

    <!-- 이름 입력 -->
    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editName"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:hint="이름 입력"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelName" />

    <!-- 색상 선택 -->
    <TextView
        android:id="@+id/labelColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="색상"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editName" />

    <LinearLayout
        android:id="@+id/colorOptionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/bg_input_box_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelColor">

        <ImageView
            android:id="@+id/colorRed"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_purple_blue" />

        <ImageView
            android:id="@+id/colorBlue"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_pink_yellow" />

        <ImageView
            android:id="@+id/colorGreen"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_blue_mint" />

        <ImageView
            android:id="@+id/colorYellow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_emerald_gold" />

        <ImageView
            android:id="@+id/colorPurple"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_purple_pink" />
    </LinearLayout>

    <!-- 감소량 / 증가량 -->
    <TextView
        android:id="@+id/labelDecrement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="감소량"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorOptionContainer" />

    <TextView
        android:id="@+id/labelIncrement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:text="증가량"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/colorOptionContainer" />

    <EditText
        android:id="@+id/editDecrementStep"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="기본: 1"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelDecrement" />

    <EditText
        android:id="@+id/editIncrementStep"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="기본: 1"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/labelIncrement" />

    <!-- 최솟값 / 최댓값 -->
    <TextView
        android:id="@+id/labelMin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="최솟값"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDecrementStep" />

    <TextView
        android:id="@+id/labelMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:text="최댓값"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/editIncrementStep" />

    <EditText
        android:id="@+id/editMinValue"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="기본: 0"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelMin" />

    <EditText
        android:id="@+id/editMaxValue"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="기본: 99999999"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/labelMax" />

    <!-- 커스텀 스텝 4쌍 -->
    <!-- (Custom1 ~ Custom4 전부 동일 구조, 주석 생략) -->
    <!-- Custom 1 -->
    <TextView
        android:id="@+id/labelCustom1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="추가값 #1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editMinValue" />

    <EditText
        android:id="@+id/editCustomStep1"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="기본: 10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelCustom1" />

    <!-- Custom 2 -->
    <TextView
        android:id="@+id/labelCustom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:text="추가값 #2"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/editMaxValue" />

    <EditText
        android:id="@+id/editCustomStep2"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="기본: 50"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/labelCustom2" />

    <!-- Custom 3 -->
    <TextView
        android:id="@+id/labelCustom3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="추가값 #3"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep1" />

    <EditText
        android:id="@+id/editCustomStep3"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="기본: 100"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelCustom3" />

    <!-- Custom 4 -->
    <TextView
        android:id="@+id/labelCustom4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:text="추가값 #4"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep2" />

    <EditText
        android:id="@+id/editCustomStep4"
        style="@style/PopupInputStyle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="기본: 1000"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter"
        app:layout_constraintTop_toBottomOf="@id/labelCustom4" />

    <!-- 오류 메시지 -->
    <TextView
        android:id="@+id/textError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editCustomStep4" />

    <!-- 확인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmEdit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/topbar_gradient"
        android:text="확인"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textError" />

    <!-- 중앙 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>