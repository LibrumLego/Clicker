<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- 팝업 전체 배경 -->
    <ImageView
        android:id="@+id/popupBg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/popup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 입력 -->
    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:hint="이름 입력"
        app:layout_constraintTop_toTopOf="@id/popupBg"
        app:layout_constraintStart_toStartOf="@id/popupBg"
        app:layout_constraintEnd_toEndOf="@id/popupBg"
        android:layout_marginTop="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- 색상 선택 -->
    <LinearLayout
        android:id="@+id/colorOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editName"
        app:layout_constraintStart_toStartOf="@id/popupBg"
        app:layout_constraintEnd_toEndOf="@id/popupBg"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/colorRed"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_red" />

        <ImageView
            android:id="@+id/colorBlue"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_blue" />

        <ImageView
            android:id="@+id/colorGreen"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_green" />

        <ImageView
            android:id="@+id/colorYellow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_yellow" />

        <ImageView
            android:id="@+id/colorPurple"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="6dp"
            android:src="@drawable/circle_color_purple" />
    </LinearLayout>

    <!-- 확인 버튼 (투명 클릭 영역) -->
    <View
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/colorOptions"
        app:layout_constraintStart_toStartOf="@id/popupBg"
        app:layout_constraintEnd_toEndOf="@id/popupBg"
        android:layout_marginTop="44dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
