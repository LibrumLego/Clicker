<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택됨 -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#8B5CF6"
                android:endColor="#51CDE3"/>
            <stroke android:width="4dp" android:color="#000000"/> <!-- 검은 테두리 -->
        </shape>
    </item>

    <!-- 기본 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#8B5CF6"
                android:endColor="#51CDE3"/>
        </shape>
    </item>
</selector>
